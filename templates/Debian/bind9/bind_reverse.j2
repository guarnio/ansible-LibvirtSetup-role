;
; BIND reverse data file for local loopback interface
;
$TTL	604800
@	IN	SOA	{{item.dns_domain}}. root.{{item.dns_domain}}. (
			      1		; Serial
			 604800		; Refresh
			  86400		; Retry
			2419200		; Expire
			 604800 )	; Negative Cache TTL
;
@	IN	NS	{{item.dns_domain}}.
1	IN	PTR	{{item.dns_domain}}.
1	IN	PTR	root.{{item.dns_domain}}.

; example:
; 40  IN  PTR   idm.{{item.dns_domain}}.
